
<div class="container wrap">
	<div class="row">
		<div class="col-md-3">
			<h1 class= "text-center"><%= current_user.username %></h1>
		</div>
		<div class="col-md-6 convo-box">
			<div class="messages index" data-user= <%= current_user.id %> data-convo= <%= @conversation.id %>>
				<% @conversation.messages.each do |msg| %>
					<% if msg.body %>
				 		<% user = User.find(msg.user_id) %>
					 	<div class="header" data-val= <%= msg.id %>>
					 		<% if msg.user == current_user %>
						 		<div class="bubble me"><%= msg.body %>
									<br><%= msg.formatted_time %>
						 		</div>
						 	<% else %>
						 		<div class="bubble you"><%= msg.body %>
						 			<br><%= msg.formatted_time %>
								</div>
							<% end %>					
						</div>
					<% end %>
				<% end %>
			</div>	
			<div class="form-wrapper msg-form">
				<%= render 'form' %>
			</div>
		</div>
		<div class="col-md-3">
			<% if @conversation.recipient != current_user %>
				<h1 class= "text-center"> <%= @conversation.recipient.username %></h1>
			<% else %>
				<h1 class= "text-center"> <%= @conversation.sender.username %></h1>
			<% end %>
		</div>
	</div>
</div>
