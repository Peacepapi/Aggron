<div class="convo-box">
	<% @messages.each do |msg| %>
		<% if msg.body %>
			<% user = User.find(msg.user_id) %>
			<%= user.username %>
			<br>
			<%= msg.body %>
			<br> 
			<%= time_ago_in_words(msg.created_at) %>
			<br>
		<% end %>
	<% end %>
</div>




<div class="form-group well">
	<%= form_for [@conversation, @message] do |f| %>
		<%= f.label :body%>
		<%= f.text_area :body, size: "40x12", class: 'form-control'  %>
		<br>
		<%= f.text_field :user_id, value: current_user.id, type: "hidden", class: 'form-control'   %>
		<br>
		<%= f.submit "Add message" %>
	<% end %>
</div>


