<%= render 'shared/errors', obj: Comment.new %>
	<div class="form-group well">
			<%= form_for [@tool, Comment.new ], remote: true do |f| %>
				<%= f.label :body %>
				<%= f.text_area :body, rows: "5", class: "form-control" %>
				<div class="text-right">
					<%= f.submit('Leave a Comment', class: " btn btn-success")%>
   				</div>
			<% end %>
	</div>
